{
  "scheduler": {
    "max_concurrent_jobs": 4,
    "poll_interval_seconds": 2.0,
    "task_timeout_seconds": 180
  },
  "paths": {
    "log_directory": "./POLYMARKET_MAKER/logs",
    "data_directory": "./POLYMARKET_MAKER/logs",
    "order_history_file": "./POLYMARKET_MAKER/logs/order_history.jsonl",
    "run_state_file": "./POLYMARKET_MAKER/logs/run_state.json"
  },
  "retry_strategy": {
    "max_attempts": 5,
    "initial_backoff_seconds": 1.0,
    "backoff_multiplier": 2.0,
    "max_backoff_seconds": 30.0,
    "jitter_fraction": 0.2
  },
  "monitoring": {
    "metrics_flush_interval_seconds": 15,
    "healthcheck_interval_seconds": 30
  }
}
